{
  "name": "indie-arch",
  "version": "1.0.0",
  "author": "Bogdan Kolesnyk",
  "keywords": [],
  "description": "",
  "license": "MIT",
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "prepare": "run-p prepare:*",
    "prepare:workspaces": "turbo prepare",
    "prepare:husky": "husky",
    "prepare:docker-env": "cp -u misc/docker/.env.example misc/docker/.env",
    "docker:up": "docker compose --env-file misc/docker/.env -f misc/docker/docker-compose.yaml up -d",
    "docker:down": "docker compose -f misc/docker/docker-compose.yaml down",
    "dev": "turbo dev",
    "qc": "turbo qc",
    "fix": "turbo fix",
    "build": "turbo build",
    "ncu": "turbo ncu",
    "app:api": "pnpm --filter @indie-arch/api",
    "lib:meilisearch": "pnpm --filter @indie-arch/meilisearch",
    "lib:typesense": "pnpm --filter @indie-arch/typesense"
  },
  "devDependencies": {
    "@turbo/gen": "2.0.5",
    "husky": "9.0.11",
    "npm-run-all": "4.1.5",
    "shx": "0.3.4",
    "turbo": "2.0.5"
  }
}
